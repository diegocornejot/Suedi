
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width-device-width, initial-scale-1.0">
        <title>Login&Register</title>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,
        600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        <link href="@Url.Content("~/assets/css/styles.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <main>
            <div class="all_container">
                <div class="box_back">
                    <div class="box_back-login">
                        <h3>¿Tienes una cuenta?</h3>
                        <p> Inicia sesión para poder entrar a nuestros cursos </p>
                        <button id="Btn_login"> Iniciar sesion </button>
                    </div>
                    <div class="box_back-register">
                        <h3>¡Redistrate ahora!</h3>
                        <p> Registrate, nunca es tarde para aprender </p>
                        <button id="Btn_register" onclick="window.location.href='/Suedi/Nuevo'"> Registrarse </button>
                    </div>
                </div>
                <!--Formulario Login & Register-->
                <div class="container_login-register">
                    <!--Login-->
                    <form action="@Url.Content("~/Login/Login")" class="form_login" method="post">
                        <h2> Iniciar sesion </h2>

                        <input type="text" placeholder="Correo electrónico" name="Correo">

                        <input type="password" placeholder="Contraseña" name="Password">
                        <div class="col-md-4">
                            <section id="socialLoginForm">
                                
                            </section>
                        </div>
                        <input type="submit" value="Entrar" />
                    </form>
                    <!--Register-->
                    <form action="" class="form_register">
                        <h2> ¡Regístrate! </h2>
                        <input type="text" placeholder="Enamil">
                        <input type="text" placeholder="Contraseña">
                        <input type="text" placeholder="Apellido Materno">
                        <input type="text" placeholder="Correo electrónico">
                        <input type="text" placeholder="Usuario">
                        <input type="password" placeholder="Contraseña">
                        <button> Registrarse </button>
                    </form>
                </div>
            </div>
        </main>
        <script src="assets/js/script.js"></script>
    </body>
 
    </html>

   


