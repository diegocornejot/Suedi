
@{
    ViewBag.Title = "Elegir";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width-device-width, initial-scale-1.0">
    <title>Login&Register</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,
        600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="@Url.Content("~/assets/css/styles.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <main>
        
        <div class="container">

            <div class="row">
                <div class="d-grid gap-2 col-6 mx-auto">
                    <div class="card bg-dark text-black">
                        <img src="~/img/profesor.jpg" class="card-img" >
                        <div class="card-img-overlay" >
                            <div class="container" id="LoginProfesor">
                                <h5 class="card-title">Entrar como Profesor</h5>
                                <p class="card-text">Podrás tener acceso a crear un curso y poder enseñar tus capacidades intelectuales a las personas interesadas en tu trabajo.</p>
                                <p class="card-text">¡Realiza en cambio ahora!</p>
                                <a type="button" id="btnProfesor" class="btn btn-dark" href="~/Profesor/LoginProfesor">Profesor</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <div class="card bg-dark text-black">
                        <img src="~/img/alumno.jpg" class="card-img" >
                        <div class="card-img-overlay">
                            <div class="container" id="Login">
                                <h5 class="card-title">Entrar como Alumno</h5>
                                <p class="card-text">Ten a tu disposición los cursos de tu interés, podrás llegar a tener un certificado por tu profesor si completas los cursos.</p>
                                <p class="card-text">¡Mucha suerte y sigue estudiando! </p>
                                <a type="button" id="alumno" class="btn btn-dark" href="~/Login/Login">Alumno</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="assets/js/script.js"></script>
    <script type="text/javascript">
        $('#btnprofesor').click(function () {
            var esperar = 2000;
            $.ajax({
                url: "~/Profesor/LoginProfesor.cshtml",
                beforeSend: function () {
                    $('#LoginProfesor').text('  ');
                },
                success: function (data) {
                    setTimeout(function () {
                        $('#LoginProfesor').cshtml(data);
                    }, esperar
                    );
                }
            })
        });

        $('#alumno').click(function () {
            var esperar = 2000;
            $.ajax({
                url: "~/Login/Login",
                beforeSend: function () {
                    $('#Login').text('  ');
                },
                success: function (data) {
                    setTimeout(function () {
                        $('#Login').cshtml(data);
                    }, esperar
                    );
                }
            })
        });

    </script>
</body>

</html>

